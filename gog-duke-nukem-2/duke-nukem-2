#!/usr/bin/bash
gogdir="/opt/gog/duke-nukem-2"
homedir="$HOME/.gog/duke-nukem-2"
mkdir -p "$homedir"/{game,config/data}

unionfs -o cow,relaxed_permissions "$homedir/config=RW:$gogdir=RO" "$homedir/game"
dosbox -conf "$homedir/game/dosbox_duke2.conf" \
	-conf "$homedir/game/dosbox_duke2_single.conf"
fusermount -u "$homedir/game"
