    'ssid="eduroam"'
    'key_mgmt=WPA-EAP'
    'eap=PEAP'
    'proto=WPA2'
    'phase2="auth=None"'
    'identity="<solis ID>@soliscom.uu.nl"' # ex: 4127918
    'ca_cert="/usr/share/ca-certificates/trust-source/mozilla.trust.crt"'
    'password="<solis ID passphrase>"'
)
