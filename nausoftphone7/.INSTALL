post_install() {
    xdg-icon-resource forceupdate --theme hicolor &> /dev/null
    LINK=/usr/bin/nausoftphone7
    if [ -L $LINK ]; then
    	rm -f $LINK
    fi
    ln -s /opt/naumen/nausoftphone7/nausoftphone $LINK
    update-desktop-database -q
	# Libs alias
    ln -s /usr/lib/libboost_system.so /opt/naumen/nausoftphone7/libboost_system.so.1.54.0
    ln -s /usr/lib/libboost_thread.so /opt/naumen/nausoftphone7/libboost_thread.so.1.54.0
    ln -s /usr/lib/libboost_filesystem.so /opt/naumen/nausoftphone7/libboost_filesystem.so.1.54.0
}

post_upgrade() {
    post_install
}

post_remove() {
    xdg-icon-resource forceupdate --theme hicolor &> /dev/null
    if [ "$1" = "remove" ]; then
    	ldconfig
    fi
	LINK=/usr/bin/nausoftphone7
    if [ -L $LINK ]; then
    	rm -f $LINK
    fi
    update-desktop-database -q

	# Libs alias remove
    unlink /opt/naumen/nausoftphone7/libboost_system.so.1.54.0
    unlink /opt/naumen/nausoftphone7/libboost_thread.so.1.54.0
    unlink /opt/naumen/nausoftphone7/libboost_filesystem.so.1.54.0
}
