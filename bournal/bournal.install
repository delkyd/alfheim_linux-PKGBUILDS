post_install() {
 gtk-update-icon-cache -q -f -t usr/share/icons/hicolor
 [ -x `which update-desktop-database` ] && update-desktop-database -q
 /bin/true
}

post_remove() {
 gtk-update-icon-cache -q -f -t usr/share/icons/hicolor
 [ -x `which update-desktop-database` ] && update-desktop-database -q
 /bin/true
}
