post_install() {
  cat << EOF
==> Put this in your $HOME/.emacs file to enable autoloading of pkgbuild-mode
==> and auto-recognition of "PKGBUILD" files:

(require 'pkgbuild-mode)
(setq auto-mode-alist (append '(("/PKGBUILD$" . pkgbuild-mode)) auto-mode-alist))
EOF
}

post_upgrade() {
  post_install $1
}
