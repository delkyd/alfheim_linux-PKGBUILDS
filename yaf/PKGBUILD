# Contributor: Gwenn Guegen (grumlygg) <gwenn+aur@beurre.demisel.net>

pkgname="yaf"
pkgver="2.8.4"
pkgrel=1
pkgdesc="Yet Another Flowmeter. Processes packet data from pcap dumpfiles as generated by tcpdump or via live captures from an interface"
arch=('i686' 'x86_64')
url='https://tools.netsa.cert.org/yaf/'
license=('GPL')
depends=('glib2>=2.6.4' 'libpcap' 'libfixbuf>=1.0.0')
source=("https://tools.netsa.cert.org/releases/${pkgname}-${pkgver}.tar.gz")
sha256sums=('4ce75938de40f2a27dcc360ac6a4930e55e9d5c1bd27fd77e4c66fd48faa8d02')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}
