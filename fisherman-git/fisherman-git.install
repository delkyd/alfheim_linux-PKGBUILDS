function post_install {
  echo "
Friendly reminder:

Fisherman sometimes changes, and since this package is using the latest revision
from git, it may fail occasionally.
Please leave a comment in AUR and report to upstrean in case of breakages.
"
}

function post_upgrade {
  post_install
}

function post_remove {
  echo "
Remember that your plugins and Fisherman config still reside in your home directory,
usually ~/.config/fish/ and ~/.config/fisherman.
"
}
