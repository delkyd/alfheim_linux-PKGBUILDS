package() {
  cd "${pkgdir}"
  for I in `ls "${srcdir}" | grep '\.deb$'`; do
          ar x "${srcdir}/$I" data.tar.gz  || return 1;
          tar -xzf data.tar.gz || return 1;
          rm "${pkgdir}/data.tar.gz"
  done
}
