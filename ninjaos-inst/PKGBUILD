# This pakcage is a replacement for installscript.sh
# Its also a dummy package that sets settings but does not install software.

pkgname=ninjaos-inst
pkgver=1
pkgrel=1
pkgdesc="post-install script for building ninjaos"
url="http://ninjaos.org"
arch=('any')
license=('GPL3')
depends=('pacman' 'archlinux-keyring' 'wireshark-cli' 'networkmanager' 'iputils' 'libcap')
install=${pkgname}.install
source=("dummy.file")
sha256sums=('710d6adfa39f1ea9da593c278425b0f78ac6ce63976106b1f0760d73d0d655f8')

build() {
  echo "This is a Post Installation script for Ninja OS."
  echo "It is a dummy package with no software."
}

package() {
  echo "see the .install file for more information"
}
