pre_remove()
{
	spotcommander stop

	rm -f /usr/share/webapps/spotcommander/run/daemon-user-*.socket
	rm -f /usr/bin/spotcommander
	rm -f /etc/httpd/conf/extra/spotcommander.conf
	rm -f /etc/xdg/autostart/spotcommander.desktop	
}
