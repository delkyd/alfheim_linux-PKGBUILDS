		"Wise:text_color:#1a1a1a"
		"Wise:tooltip_bg_color:#f5f5b5"
		"Wise:tooltip_fg_color:#000000")

	for THEME in {"Illustrious","Butter","Dust","Noble","Aluminium","Tribute","Brave","Human","Wine","Wise"}{""," Dark"}; do
		ICONTHEME="${THEME%% *}"
		SEDARGS=()
		for COLOR in "${COLORS[@]}"; do
			if [ "${COLOR%%:*}" = "${THEME}" ]; then
				THEMECOLOR="${COLOR#*:}"
				SEDARGS+=(-e "/^gtk-color-scheme/s/\\(\\\"\\|n\\)${THEMECOLOR%:*}:#[0-9a-fA-F]*/\1${THEMECOLOR}/")
			fi
		done
		sed "${SEDARGS[@]}" < /usr/share/themes/Clearlooks/gtk-2.0/gtkrc > ${srcdir}/gtkrc
		install -D -m0644 ${srcdir}/gtkrc ${pkgdir}/usr/share/themes/Clearlooks${THEME/ /}/gtk-2.0/gtkrc

		( echo "[Desktop Entry]"
		  echo "Type=X-GNOME-Metatheme"
		  echo "Name=Clearlooks ${THEME}"
		  echo "Comment=Clearlooks Color theme ${THEME}"
		  echo "Encoding=UTF-8"
		  echo
		  echo "[X-GNOME-Metatheme]"
		  echo "Name=Clearlooks ${THEME}"
		  echo "GtkTheme=Clearlooks ${THEME}"
		  echo "MetacityTheme=Clearlooks ${THEME}"
		  echo "IconTheme=gnome-${ICONTHEME,,}"
		  echo "ApplicationFont=sans 12" ) > ${srcdir}/index.theme
		install -D -m0644 ${srcdir}/index.theme ${pkgdir}/usr/share/themes/Clearlooks${THEME/ /}/index.theme
	done

	install -D -m0644 ${srcdir}/Palette.svg ${pkgdir}/usr/share/${pkgname}/Palette.svg
}

