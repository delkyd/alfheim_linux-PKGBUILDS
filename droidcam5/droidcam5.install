post_install() {
  _extramodules="extramodules-$(uname -r | cut -f-2 -d'.')-$(uname -r|sed -e 's/.*-//g')"
  depmod $(cat /usr/lib/modules/${_extramodules}/version)
  echo "Don't for forget to install appropriate version of Droidcam on your phone. See http://www.dev47apps.com/droidcam/help/ ."
}

post_upgrade() {
  post_install
}

post_remove() {
  post_install
}

