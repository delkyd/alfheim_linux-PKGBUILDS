pkgname='matrix-appservice-irc'
pkgver=0.7.2
pkgrel=1
pkgdesc="Node.js IRC bridge for Matrix"
arch=('any')
url="https://github.com/matrix-org/matrix-appservice-irc"
license=('Apache')
depends=('nodejs')
makedepends=('npm' 'git')
optdepends=('python: for maintenance scripts')
source=(${pkgname}-${pkgver}.tar.gz::"${url}/archive/v${pkgver}.tar.gz")
sha256sums=('7076e078c415205622a396fa541221f8ecdb0e153521a22143ea1d7c5b873f43')

package() {
  cd ${pkgbase}-${pkgver}
  npm install --cache "${srcdir}/npm-cache" -g --user root --prefix "${pkgdir}"/usr
  rmdir "${pkgdir}"/usr/etc
}
