pkgname=bash-statemgr
pkgver=2015
pkgrel=1
pkgdesc='A Bash module for creating generic state/profile managers.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/bash-statemgr"
depends=(bash)
optdepends=('zenity: new state creation in Openbox pipe menus generated by obstatemgr')
source=(
  http://xyne.archlinux.ca/projects/bash-statemgr/src/bash-statemgr-2015.tar.xz
  http://xyne.archlinux.ca/projects/bash-statemgr/src/bash-statemgr-2015.tar.xz.sig
)
sha512sums=(
  135ae77e474f8f9dfb5fee6fde43d7d81f0083bdb071efdc505a28584187e87bf8511f3afc27dce341dd6c237c3e9fbd83279cf79782bb5aa3e0ff44e2f846ce
  396fc8fb4e95a8dcd95d83622dca14ce816c3cd9a80d6474c44221b3b7bf965e54c9029d50c119b3367180d3df488d927f8d248390aed7162064ddd330ca5568
)
md5sums=(
  c86fceaa40d9230c8610f3e90d570633
  7c4acc3c1d22648651e422b60f64aab1
)
validpgpkeys=('EC3CBE7F607D11E663149E811D1F0DC78F173680')

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm644 statemgr "$pkgdir"/usr/share/bash/statemgr
  install -Dm755 obstatemgr "$pkgdir"/usr/bin/obstatemgr
}

